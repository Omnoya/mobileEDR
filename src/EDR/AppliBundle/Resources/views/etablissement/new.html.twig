{#ADMIN#}

{#{% extends 'base.html.twig' %} #}
{% extends "EDRAppliBundle::layoutadmin.html.twig" %}


{% block body %}
    <h3 class="admin_h3">Ajouter un nouvel établissement</h3>

     {{ form_start(form) }}
        <div class="row">
            <div class="col s12 admin_form">
                <div class="input-field autocomplete">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_widget(form.categories) }}
                    {{ form_errors(form.categories) }}
                    {{ form_label(form.categories) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field autocomplete">
                    {{ form_label(form.adresse) }}
                    {{ form_widget(form.adresse, {'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.adresse) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.adresse2) }}
                    {{ form_widget(form.adresse2,{'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.adresse2) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.codePostal) }}
                    {{ form_widget(form.codePostal,{'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.codePostal) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field autocomplete">
                    {{ form_label(form.ville) }}
                    {{ form_widget(form.ville,{'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.ville) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.longitude) }}
                    {{ form_widget(form.longitude,{'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.longitude) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.latitude) }}
                    {{ form_widget(form.latitude,{'attr':{'class':'materialize-textarea'} }) }}
                    {{ form_errors(form.latitude) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone) }}
                    {{ form_errors(form.telephone) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

            </div>
        </div>
        <div class="row">
            <label for="etablissement_tags">Selectionnez un tag</label>
             <div class="col s12">
                    {{ form_widget(form.tags) }}
                    {{ form_errors(form.tags) }}
             </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Photo</span>
                        {{ form_widget(form.uploadPhoto) }}
                        {{ form_errors(form.uploadPhoto) }}
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {{ form_widget(form.publier) }}
            <label for="etablissement_publier">Publier l'annonce</label>
            {{ form_errors(form.publier) }}
        </div>
        <input type="submit" value="Créer un nouvel établissement" class="admin_valider"/>
        <a href="{{ path('etablissement_index') }}" title="Retour à la liste des établissements">&crarr;</a>
        {{ form_end(form) }}



{% endblock %}

