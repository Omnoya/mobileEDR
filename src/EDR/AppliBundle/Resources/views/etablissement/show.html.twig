{#ADMIN#}

{#{% extends 'base.html.twig' %} #}
{% extends "EDRAppliBundle::layoutadmin.html.twig" %}

{% block body %}
    <h3 class="admin_h3">Etablissement</h3>

    <div class="row">
        <div class="col s12 admin_etab_card">
            {% for avis  in avis_etablissement %}
                <ul class="collapsible admin_commentaire" data-collapsible="expandable">
                    <p>
                        <b>Note</b> : {{ avis.note }}<br>
                        <b>Commentaire</b> : <br>{{ avis.commentaire }}
                    </p>
                </ul>
            {% endfor %}

            <div class="row">
                <div class="col s12">
                    <h4 class="admin_etab">{{ etablissement.nom }}</h4>
                    <img class="responsive-img" src="{{ asset('uploads/photos/') }}{{ etablissement.photo }}"><br>
                    <p>{{ etablissement.adresse }}</p>
                    <p>{{ etablissement.adresse2 }}</p>
                    <p>{{ etablissement.codePostal }}</p>
                    <p>{{ etablissement.ville }}</p>
                    <p>{{ etablissement.longitude }}</p>
                    <p>{{ etablissement.latitude }}</p>
                    <p>{{ etablissement.telephone }}</p>
                    <p>{{ etablissement.email }}</p>
                    <p>{% if etablissement.publier %}Publié{% else %}Non Publié{% endif %}</p>
                </div>
            </div>

            <div class="row admin_nav">
                <a href="{{ path('etablissement_edit', { 'id': etablissement.id }) }}" class="admin_edit">Modifier</a>
                <a href="{{ path('etablissement_index') }}" class="admin_retour">&crarr;</a>
                <a href="{{ path('etablissement_delete', { 'id': etablissement.id }) }}" class="admin_delete">Supprimer</a>
            </div>
        </div>
    </div>

{% endblock %}