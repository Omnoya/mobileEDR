{#ADMIN#}

{#{% extends 'base.html.twig' %} #}
{% extends "EDRAppliBundle::layoutadmin.html.twig" %}

{% block body %}
    <h3 class="admin_h3">Etablissement</h3>
    <div class="card admin_etab_card">
        {% for avis  in avis_etablissement %}
            <ul class="collapsible" data-collapsible="expandable">note : {{ avis.note }}
                commentaire : {{ avis.commentaire }}</ul>
        {% endfor %}

    {% for avis  in avis_etablissement %}
        <ul class="collapsible" data-collapsible="expandable">
            <li>Note : {{ avis.note }}</li>
            <li>Commentaire : {{ avis.commentaire }}</li>
        </ul>
    {% endfor %}

        <h4 class="admin_etab">{{ etablissement.nom }}</h4>
        <div style="width: 100%; text-align: center" class="img_etab">
            <img src="{{ asset('uploads/photos/') }}{{ etablissement.photo }}">
        </div>
        {{ etablissement.adresse }}<br>
        {{ etablissement.adresse2 }}<br>
        {{ etablissement.codePostal }}<br>
        {{ etablissement.ville }}<br>
        {{ etablissement.longitude }}<br>
        {{ etablissement.latitude }}<br>
        {{ etablissement.telephone }}<br>
        {{ etablissement.email }}<br>
        {% if etablissement.publier %}Publié{% else %}Non Publié{% endif %}<br>

        <div class="row">
            <div class="col s6">
                <ul>
                    <h5>Catégories</h5>
                    {% for categ in etablissement.categories %}
                        <li>{{ categ.nom }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col s6">
                <ul>
                    <h5>Tag</h5>
                    {% for tag in etablissement.tags %}
                        <li>{{ tag.nom }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>


        <p class="admin_nav">
            <a href="{{ path('etablissement_edit', { 'id': etablissement.id }) }}" class="admin_edit">Modifier</a>
            <a href="{{ path('etablissement_index') }}" alt="Retour à la liste des établissements" class="admin_retour">&crarr;</a>
        </p>


    </div>

{% endblock %}
