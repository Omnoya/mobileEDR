{# src/EDR/AppliBundle/Resources/views/layoutadmin.html.twig #}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# création du bloc « title » avec « OC Plateforme » comme contenu par défaut #}
    <title>{% block title %}EDR - Tableau de bord{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/edrappli/css/style.css') }}">
    {% endblock %}
</head>

<body class="admin_body">
<h1 class="admin_h1">EDR - Tableau de bord</h1>

{% block menu %}


        <a href="{{ path('edr_appli_home') }}" alt="Accueil" title="Accueil"><div class="row admin_menu"><i class="material-icons left">dashboard</i> Accueil</div></a>
        <a href="{{ path('etablissement_index') }}" alt="Gérer les établissements" title="Gérer les établissements"><div class="row admin_menu"><i class="material-icons left">settings</i> Gérer les établissements</div></a>
        <a href="{{ path('categorie_index') }}" alt="Gestion des Catégories" title="Gestion des Catégories"><div class="row admin_menu"><i class="material-icons left">note_add</i> Gérer les catégories</div></a>
        <a href="{{ path('tag_index') }}" alt="Gestion des Tags" title="Gestion des Tags"><div class="row admin_menu"><i class="material-icons left">label</i> Gérer les tags</div></a>
        <div class="row admin_menu"><i class="material-icons left">perm_identity</i> Gérer les utilisateurs</div>
<a href="{{ path('avis_index') }}" alt="Gestion des Avis" title="Gestion des Avis"><div class="row admin_menu"><i class="material-icons left">comment</i> Gérer les Commentaires</div></a>
<a href="{{ path('avis_index') }}" alt="Gestion des Avis" title="Gestion des Avis"><div class="row admin_menu"><i class="material-icons left">star</i>Gérer les notes</div></a>

    {# utilisation de la fonction {{ path() }} pour faire des liens vers d'autres routes #}



    {#<li><a href="{{ path('edr_appli_home', {'type' : 'famille'}) }}">Famille</a></li>#}

{% endblock %}

        {% block body %}

        {% endblock %}


<footer class="admin_footer">
    <p>EDR Application © {{ 'now'|date('Y') }}</p>
</footer>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script
            src="https://code.jquery.com/jquery-3.1.0.min.js"
            integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
    <script>
        $("button").click(function()) {
            $("p").toggle();
        });
    </script>
{% endblock %}

</body>
</html>