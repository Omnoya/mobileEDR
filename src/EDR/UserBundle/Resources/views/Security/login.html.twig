{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body_login %}

    <div class="pos-abs">
        <div class="pos-rel">
            <div class="valign-wrapper">
                <div class="row">
                    <div class="col s12">
                        <div class="row center-align">
                            <h2 class="edrinscription">Inscrivez-vous pour voir les restaurants et bars préférés de vos
                                amis.</h2>
                        </div>

                        {% if error %}
                            <div class="row">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="row banner">
                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                                <label for="username"><i class="material-icons">face</i></label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}"
                                       required="required"/>

                                <label for="password"><i class="material-icons">lock_outline</i></label>
                                <input type="password" id="password" name="_password" required="required"/>
                                <div class=" center-align">
                                    <input class="waves-effect waves-light btn center-align sign" type="submit"
                                           id="_submit" name="_submit"
                                           value="LOG IN" {{ 'security.login.submit'|trans }}" />
                                    <a href="{{ path('fos_user_registration_register') }}"
                                       class="waves-effect waves-light btn sign  center-align">Create an account</a>
                                    <a class="waves-effect waves-light sign btn center-align">Sign up with Facebook</a>
                                </div>
                            </form>
                        </div>
                        <div class="row center-align">
                            <a href="{{ path('edr_appli_home') }}" class="waves-effect waves-light sign btn">Skip</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="slider fullscreen">
        <ul class="slides">
            <li>
                <img src="http://lorempixel.com/580/250/nature/4"> <!-- random image -->
                <div class="caption center-align">
                    <h5 class="light grey-text text-lighten-3">Eat Drink & Repeat</h5>
                </div>
            </li>
            <li>
                <img src="http://lorempixel.com/580/250/nature/2"> <!-- random image -->
                <div class="caption center-align">
                    <h5 class="light grey-text text-lighten-3">Inscrivez-vous pour voir les restaurants et bars préférés de vos
                        amis.</h5>
                </div>
            </li>
            <li>
                <img src="http://lorempixel.com/580/250/nature/3"> <!-- random image -->
            </li>
            <li>
                <img src="http://lorempixel.com/580/250/nature/4"> <!-- random image -->
            </li>
        </ul>

    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            $(document).ready(function () {
                $('.slider').slider({full_width: true, indicators: false});
            });
        </script>
    {% endblock %}

