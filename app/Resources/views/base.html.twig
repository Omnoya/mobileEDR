{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# création du bloc « title » avec « OC Plateforme » comme contenu par défaut #}
        {#<title>{% block title %}EDR{% endblock %}</title>#}

        {% block stylesheets %}

            {# On charge le CSS de materialize depuis le site directement #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.css">
            <link rel="stylesheet" href="{{ asset('bundles/edrappli/css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/edrappli/css/jTinder.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        {% endblock %}
    </head>

    <body>

    {% if app.request.get('_route') == 'fos_user_security_login' %}

        <div class="col s12">
            {# création du bloc « body » sans contenu par défaut #}
            {% block body_login %}

            {% endblock %}7
        </div>

    {% elseif app.request.get('_route') == 'fos_user_registration_register' %}

        <div id="content" class="col-md-12">
            {# création du bloc « body » sans contenu par défaut #}
            {% block body_register %}

            {% endblock %}
        </div>

    {% else %}

        <div class="container">

            <div class="row">
                <div id="menu" class="col-md-12">

                    {% block menu %}
                    {% endblock %}

                </div>
                <div id="content" class="col-md-12">

                    {# création du bloc « body » sans contenu par défaut #}
                    {% block body %}

                    {% endblock %}
                </div>
            </div>
        </div>


    {% endif %}


    <a href="{{ path('tag_index') }}">Acceder à l'admin</a>
    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
        <!-- jQuery lib -->
        <script type="text/javascript" src="{{ asset ('bundles/edrappli/js/my.js') }}"></script>

        <script type="text/javascript" src="{{ asset ('bundles/edrappli/js/main.js') }}"></script>


        <!-- transform2d lib -->
        <script type="text/javascript" src="{{ asset ('bundles/edrappli/js/jquery.transform2d.js') }}"></script>

        <!-- jTinder lib -->
        <script type="text/javascript" src="{{ asset ('bundles/edrappli/js/jquery.jTinder.js') }}"></script>

        <!-- jTinder initialization script -->
        <script>$("#tinderslide").jTinder();</script>


    {% endblock %}

    </body>
</html>