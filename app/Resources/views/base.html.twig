{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# création du bloc « title » avec « OC Plateforme » comme contenu par défaut #}
        <title>{% block title %}EDR{% endblock %}</title>

        {% block stylesheets %}
            {# On charge le CSS de materialize depuis le site directement #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.css">
            <link rel="stylesheet" href="{{ asset('bundles/edrappli/css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="css/jTinder.css">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}
    </head>

    <body>

    {% if app.request.get('_route') == 'fos_user_security_login' %}

        <div id="content" class="col-md-12">
            {# création du bloc « body » sans contenu par défaut #}
            {% block body_login %}

            {% endblock %}
        </div>

    {% elseif app.request.get('_route') == 'fos_user_registration_register' %}

        <div id="content" class="col-md-12">
            {# création du bloc « body » sans contenu par défaut #}
            {% block body_register %}

            {% endblock %}
        </div>

    {% else %}

        <div class="container">

            <div class="row">
                <div id="menu" class="col-md-12">

                    {% block menu %}
                    {% endblock %}

                </div>
                <div id="content" class="col-md-12">
                    {# création du bloc « body » sans contenu par défaut #}
                    {% block body %}

                    {% endblock %}
                </div>
            </div>

            <footer class="page-footer">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="container">
                    <p>EDR Application © {{ 'now'|date('Y') }}</p>
                    <p>Ce projet est créé par Paola, Elodie, Timothée & Omar.</p>
                </div>
                {% endif %}
            </footer>

        </div>

    {% endif %}



    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
        <!-- jQuery lib -->
        <script type="text/javascript" src="js/jquery.min.js"></script>

        <!-- transform2d lib -->
        <script type="text/javascript" src="js/jquery.transform2d.js"></script>

        <!-- jTinder lib -->
        <script type="text/javascript" src="js/jquery.jTinder.js"></script>

        <!-- jTinder initialization script -->
        <script>$("#tinderslide").jTinder();</script>

    {% endblock %}

    </body>
</html>