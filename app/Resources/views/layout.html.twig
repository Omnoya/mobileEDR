{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# création du bloc « title » avec « OC Plateforme » comme contenu par défaut #}
    <title>{% block title %}EDR{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" />
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>EDR Application</h1>
        <p>
            Ce projet est créé par Paola, Elodie, Timothée & Omar.
        </p>
    </div>

    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Menu</h3>
            <ul class="nav nav-pills nav-stacked">
                {# utilisation de la fonction {{ path() }} pour faire des liens vers d'autres routes #}
                <li><a href="{{ path('edr_appli_home') }}">Accueil</a></li>
                <li><a href="{{ path('edr_appli_home') }}">Rechercher un Restaurant</a></li>
            </ul>


            {#<h4>Dernières annonces</h4>#}
            {# inclusion de la méthode menu du contrôleur Advert du bundle OCPlatformBundle, avec l'argument nombre défini à 3 #}
            {#{{ render(controller("OCPlatformBundle:Advert:menu", {'limit':3})) }}#}

        </div>
        <div id="content" class="col-md-9">
            {# création du bloc « body » sans contenu par défaut #}
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr/>

    <footer>
        <p>EDR Application © {{ 'now'|date('Y') }} </p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>